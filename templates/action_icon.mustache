{{!
    @template local_customfrontpage/action-icon-container

    This template renders the action button container.

    Example context (json):
    {}
}}

<div class="lb-filetransfer-action-icons">
    <div class = "lb-filetransfer-action-button" data-id = "{{id}}">
        {{#buttons}}
            <div class="lb-filetransfer-action-icon-container">
                <a href = "{{{url}}}" class = "lb-filetransfer-action-icon-link"{{#new_tab}} target = "_blank"{{/new_tab}}><i class = "{{icon}}"></i>&nbsp;{{name}}</a>
            </div>
        {{/buttons}}
    </div>
</div>
